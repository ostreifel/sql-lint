{
  "name": "vscode-tsql-lint",
  "displayName": "TSql Lint",
  "description": "Lint tsql files",
  "version": "0.0.1",
  "publisher": "ottostreifel",
  "engines": {
    "vscode": "^1.15.0"
  },
  "categories": [
    "Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./out/src/sqlLintExtension",
  "contributes": {
    "commands": []
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ostreifel/vscode-tsql-lint.git"
  },
  "author": "Otto Streifel",
  "license": "MIT",
  "configuration": {
    "type": "object",
    "title": "Tsql lint configuration",
    "properties": {
      "tsql-lint.maxNumberOfProblems": {
        "type": "number",
        "default": 10000,
        "description": "Controls the maximum number of problems produced by the server."
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.40",
    "mocha": "^4.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.0.3",
    "vscode": "^1.1.10"
  },
  "dependencies": {
    "vscode-languageclient": "^3.5.0",
    "vscode-languageserver": "^3.5.0",
    "vscode-uri": "^1.0.1"
  }
}
